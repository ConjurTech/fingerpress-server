<%= simple_form_for(@time_log) do |f| %>
    <%= f.error_notification %>

    <div class="input-field">
      <%= f.label :date_time_in, class: 'active' %>
      <%= f.date_field :date_time_in, class: "datepicker" %>
    </div>
    <div class="input-field">
      <%= f.label :date_time_out, class: 'active' %>
      <%= f.date_field :date_time_out, class: "datepicker" %>
    </div>
    <div class="input-field">
      <%= f.label :employee, class: 'active' %>
      <%= f.association :employee, label: false %>
    </div>
    <div class="input-field">
      <%= f.label :pay_scheme, class: 'active' %>
      <%= f.association :pay_scheme, label: false %>
    </div>
    <div class="form-actions">
      <%= f.button :submit %>
    </div>
<% end %>
