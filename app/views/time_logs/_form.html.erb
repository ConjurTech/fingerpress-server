<%= simple_form_for(@time_log) do |f| %>
    <%= f.error_notification %>
    <div class="error-block"><%= @time_log.errors.full_messages.join(', ') if @time_log.errors.any? %></div>

    <div class="input-field">
      <%= f.label :date_in, "Start Date", class: 'active' %>
      <%= f.input :date_in, as: :string, label: false, input_html: {class: "datepicker"} %>
    </div>
    <div class="input-field">
      <%= f.label :time_in, "Start Time", class: 'active' %>
      <div class="input-group clockpicker">
        <%= f.input :time_in, as: :string, label: false %>
        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-time"></span>
                      </span>
      </div>

    </div>
    <div class="input-field">
      <%= f.label :date_out, "End Date", class: 'active' %>
      <%= f.input :date_out, as: :string, label: false, input_html: {class: "datepicker"} %>
    </div>
    <div class="input-field">
      <%= f.label :time_out, "End Time", class: 'active' %>
      <div class="input-group clockpicker">
        <%= f.input :time_out, as: :string, label: false %>
        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-time"></span>
                      </span>
      </div>

    </div>
    <div class="input-field">
      <%= f.label :employee, class: 'active' %>
      <%= f.association :employee, label: false %>
    </div>
    <div class="form-actions">
      <%= link_to 'Back', time_logs_path, class: 'btn' %>
      <%= f.button :submit %>
    </div>
<% end %>
