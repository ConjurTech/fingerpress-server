<%= simple_form_for(@time_log) do |f| %>
    <%= f.error_notification %>

    <div class="input-field">
      <%= f.label :time_in, "Start Date" %>
      <%= f.text_field :time_in, class: "datepicker" %>
    </div>
    <div class="input-field">
      <%= f.label :date_in, "Start Time", class: 'active' %>
      <div class="input-group clockpicker">
        <%= f.text_field :date_in %>
        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-time"></span>
                      </span>
      </div>

    </div>
    <div class="input-field">
      <%= f.label :date_out, "End Date" %>
      <%= f.text_field :date_out, class: "datepicker" %>
    </div>
    <div class="input-field">
      <%= f.label :time_out, "End Time", class: 'active' %>
      <div class="input-group clockpicker">
        <%= f.text_field :time_out %>
        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-time"></span>
                      </span>
      </div>

    </div>
    <div class="input-field">
      <%= f.label :employee, class: 'active' %>
      <%= f.association :employee, label: false %>
    </div>
    <div class="input-field">
      <%= f.label :pay_scheme, class: 'active' %>
      <%= f.association :pay_scheme, label: false %>
    </div>
    <div class="form-actions">
      <%= f.button :submit %>
    </div>
<% end %>
