<p id="notice"><%= notice %></p>

<h1>Listing Time Logs</h1>

<table>
  <thead>
    <tr>
      <th>Date in</th>
      <th>Date out</th>
      <th>Employee</th>
      <th>Pay scheme</th>
      <th>Pay slip</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @time_logs.each do |time_log| %>
      <tr>
        <td><%= time_log.date_time_in.to_formatted_s(:long) %></td>
        <td><%= time_log.date_time_out.to_formatted_s(:long) %></td>
        <td><%= time_log.employee.name %></td>
        <td><%= time_log.pay_scheme.id %></td>
        <td><%= time_log.payment_record.try(:id) %></td>
        <td>
          <%= link_to time_log do %>
              <i class="material-icons">pageview</i>
          <% end %>
        </td>
        <td>
          <%= link_to edit_time_log_path(time_log) do %>
              <i class="material-icons">edit</i>
          <% end %>
        </td>
        <td>
          <%= link_to time_log, method: :delete, data: { confirm: 'Are you sure?' } do %>
              <i class="material-icons">delete</i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Time log', new_time_log_path,  class: "waves-effect waves-light btn" %>
