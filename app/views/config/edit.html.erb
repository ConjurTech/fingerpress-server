<html>
<head></head>
<body>
<%= form_tag config_update_path do %>
    <div class="row">
      <% @workdays.each do |workday| %>
          <%= fields_for "workdays[]", workday do |wf| %>

              <div class="col s6">
                <div class="card white darken-1">
                  <div class="card-content black-text">

                    <%= wf.text_field :name %>

                    <div class="input-group clockpicker">
                      <%= wf.text_field :start_time_seconds %>
                      <span class="input-group-addon">
                            <span class="glyphicon glyphicon-time"></span>
                      </span>
                    </div>

                    <div class="input-group clockpicker">
                      <%= wf.text_field :end_time_seconds %>
                      <span class="input-group-addon">
                            <span class="glyphicon glyphicon-time"></span>
                      </span>
                    </div>

                    <%= wf.check_box :enabled %>
                    <%= wf.label :enabled %> <br/>

                  </div>
                </div>
              </div>

          <% end %>
      <% end %>
    </div>
    <%= submit_tag 'Save', class: "waves-effect waves-light btn" %>
<% end %>
</body>
</html>