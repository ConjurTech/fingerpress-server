<html>
<head></head>
<body>
<%= form_tag config_update_path do %>
    <% @workdays.each do |workday| %>
        <%= fields_for "workdays[]", workday do |wf| %>
            <%= wf.text_field :name %>

            <div class="input-group clockpicker">
              <%= wf.text_field :start_time_seconds %>
              <span class="input-group-addon">
                    <span class="glyphicon glyphicon-time"></span>
              </span>
            </div>


            <%= wf.time_field :end_time_seconds %>
            <%= wf.check_box :enabled %>
            <%= wf.label :enabled %> <br/>
        <% end %>
    <% end %>
    <%= submit_tag 'Save', class: "waves-effect waves-light btn" %>
<% end %>
</body>
</html>