<p id="notice"><%= notice %></p>
<div class="fixed-action-btn">
  <%= link_to new_pay_scheme_path, class: "btn-floating btn-large" do %>
      <i class="material-icons tooltipped" data-position="top" data-delay="50" data-tooltip="New Pay scheme">add</i>
  <% end %>
</div>
<h1>Listing Pay Schemes</h1>

<table class="striped bordered highlight">
  <thead>
  <tr>
    <th>Name</th>
    <th>Pay type</th>
    <th>Pay</th>
    <th>Pay ot</th>
    <th>Pay Weekend</th>
    <th>Pay Public Holiday</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @pay_schemes.each do |pay_scheme| %>
      <tr>
        <td><%= pay_scheme.name %></td>
        <td><%= pay_scheme.try(:pay_type).titleize %></td>
        <td><%= pay_scheme.pay %></td>
        <td><%= pay_scheme.ot_type == 'per_hour' ? pay_scheme.pay :
                    (pay_scheme.ot_type == 'multiplier' ? "MULT #{pay_scheme.ot_multiplier} X" : 'Same As Normal') %></td>
        <td><%= pay_scheme.weekend_type == 'per_hour' ? pay_scheme.pay_weekend :
                    (pay_scheme.weekend_type == 'multiplier' ? "MULT #{pay_scheme.weekend_multiplier} X" : 'Same As Normal') %></td>
        <td><%= pay_scheme.public_holiday_type == 'per_hour' ? pay_scheme.pay_public_holiday :
                    (pay_scheme.public_holiday_type == 'multiplier' ? "MULT #{pay_scheme.public_holiday_multiplier} X" : 'Same As Normal') %></td>
        <td>
          <%= link_to pay_scheme do %>
              <i class="material-icons">pageview</i>
          <% end %>
        </td>
        <td>
          <%= link_to edit_pay_scheme_path(pay_scheme) do %>
              <i class="material-icons">edit</i>
          <% end %>
        </td>
        <td>
          <%= link_to pay_scheme, method: :delete, data: {confirm: 'Are you sure?'} do %>
              <i class="material-icons">delete</i>
          <% end %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
