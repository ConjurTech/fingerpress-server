<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @employee.name %>
</p>

<p>
  <strong>Sex:</strong>
  <%= @employee.sex %>
</p>

<p>
  <strong>Birthdate:</strong>
  <%= @employee.birthdate.to_formatted_s(:long) %>
</p>

<p>
  <strong>Joindate:</strong>
  <%= @employee.joindate.to_formatted_s(:long) %>
</p>

<p>
  <strong>Leavedate:</strong>
  <%= @employee.leavedate.to_formatted_s(:long) %>
</p>

<p>
  <strong>Bankdetails:</strong>
  <%= @employee.bankdetails %>
</p>

<table>
  <thead>
  <tr>
    <th>Date in</th>
    <th>Date out</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @time_logs.each do |time_log| %>
      <tr>
        <td><%= time_log.date_time_in.to_formatted_s(:long) %></td>
        <td><%= time_log.date_time_out.to_formatted_s(:long) %></td>
        <td><%= link_to 'Show', time_log %></td>
        <td><%= link_to 'Edit', edit_time_log_path(time_log) %></td>
        <td><%= link_to 'Destroy', time_log, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_employee_path(@employee) %> |
