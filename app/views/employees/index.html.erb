<h1>Listing employees</h1>

<table>
  <thead>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Fingerprint ID</th>
    <th>Sex</th>
    <th>Job</th>
    <th>Birthdate</th>
    <th>Joindate</th>
    <th>Leavedate</th>
    <th>PayScheme</th>
    <th>Bankdetails</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.id %></td>
        <td class="wrapped"><%= employee.name %></td>
        <td><%= employee.fingerprint_id %></td>
        <td><%= employee.sex %></td>
        <td><%= employee.job %></td>
        <td><%= employee.try(:birthdate).try(:to_formatted_s, :long) %></td>
        <td><%= employee.try(:joindate).try(:to_formatted_s, :long) %></td>
        <td><%= employee.try(:leavedate).try(:to_formatted_s, :long) %></td>
        <td class="wrapped"><%= employee.try(:pay_scheme).try(:name) %></td>
        <td class="wrapped"><%= employee.bankdetails %></td>
        <td>
          <%= link_to employee do %>
              <i class="material-icons">pageview</i>
          <% end %>
        </td>
        <td>
          <%= link_to edit_employee_path(employee) do %>
              <i class="material-icons">edit</i>
          <% end %>
        </td>
        <td>
          <%= link_to employee, method: :delete, data: {confirm: 'Are you sure?'} do %>
              <i class="material-icons">delete</i>
          <% end %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add Employee', new_employee_path, class: "waves-effect waves-light btn" %>
