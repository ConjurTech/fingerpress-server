<p id="notice"><%= notice %></p>
<div class="fixed-action-btn">
  <%= link_to new_holiday_path, class: "btn-floating btn-large" do %>
      <i class="material-icons tooltipped" data-position="top" data-delay="50" data-tooltip="New Holiday">add</i>
  <% end %>
</div>
<h1>Listing Holidays</h1>

<table class="striped bordered highlight">
  <thead>
    <tr>
      <th>Name</th>
      <th>Day</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @holidays.each do |holiday| %>
      <tr>
        <td><%= holiday.name %></td>
        <td><%= holiday.day %></td>
        <td>
          <%= link_to holiday do %>
              <i class="material-icons">pageview</i>
          <% end %>
        </td>
        <td>
          <%= link_to edit_holiday_path(holiday) do %>
              <i class="material-icons">edit</i>
          <% end %>
        </td>
        <td>
          <%= link_to holiday, method: :delete, data: {confirm: 'Are you sure?'} do %>
              <i class="material-icons">delete</i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
