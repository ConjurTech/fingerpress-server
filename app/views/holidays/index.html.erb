<p id="notice"><%= notice %></p>

<h1>Listing Holidays</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Day</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @holidays.each do |holiday| %>
      <tr>
        <td><%= holiday.name %></td>
        <td><%= holiday.day %></td>
        <td>
          <%= link_to holiday do %>
              <i class="material-icons">pageview</i>
          <% end %>
        </td>
        <td>
          <%= link_to edit_holiday_path(holiday) do %>
              <i class="material-icons">edit</i>
          <% end %>
        </td>
        <td>
          <%= link_to holiday, method: :delete, data: {confirm: 'Are you sure?'} do %>
              <i class="material-icons">delete</i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Holiday', new_holiday_path, class: 'btn' %>
