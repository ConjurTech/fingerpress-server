<div class="card blue-grey darken-1">
  <div class="card-content white-text">
    <span class="card-title">Details</span>

    <p id="notice"><%= notice %></p>

    <p><strong>Employee: </strong><%= @payment_record.employee.name %></p>

    <p><strong>Total pay: </strong><%= @payment_record.total_pay %></p>

    <p><strong>Bonus: </strong><%= @payment_record.bonus %></p>

    <p>
      <strong>Status: </strong><%= @payment_record.paid ? 'Paid on ' + @payment_record.paid_at.to_formatted_s(:long) : 'Unpaid' %>
    </p>
  </div>
</div>

<div class="card white darken-1">
  <div class="card-content">
    <span class="card-title black-text">Time Log</span>
    <table>
      <thead>
      <tr>
        <th>Date in</th>
        <th>Date out</th>
        <th>Employee</th>
        <th>Pay scheme</th>
      </tr>
      </thead>

      <tbody>
      <% @payment_record.payment_record_time_logs.each do |time_log| %>
          <tr>
            <td><%= time_log.date_time_in.to_formatted_s(:long) %></td>
            <td><%= time_log.date_time_out.to_formatted_s(:long) %></td>
            <td><%= time_log.payment_record_pay_scheme %></td>
            <td><%= time_log.payment_record %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
